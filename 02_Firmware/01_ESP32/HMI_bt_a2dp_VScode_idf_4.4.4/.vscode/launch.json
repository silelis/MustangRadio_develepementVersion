{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "espidf",
      "name": "Launch",
      "request": "launch"
    }
    // SileliS: dodaj konfiguracja debugowania 
    ,{
      "name": "ESP32 OpenOCD",
      "type": "cppdbg",
      "request": "launch",
      "cwd": "${workspaceFolder}/build",
      "program": "${workspaceFolder}/build/HMI_bt_a2dp_VScode_idf_4.4.4.elf",      //SileliS: tą ścieżkę trzeba poprawić (plik ELF)
      "miDebuggerPath": "C:/Users/dbank/.espressif/tools/xtensa-esp32-elf/esp-2021r2-patch5-8.4.0/xtensa-esp32-elf/bin/xtensa-esp32-elf-gdb.exe",
                        //SileliS: ścieżkę powyżej trzeba poprawić. Możesz ją znaleźć w zmiennej "idf.customExtraPaths" w pliku settings.json lub w pliku
				//		c_cpp_properties.json jako zmienną "compilerPath".
      "setupCommands": [
        {"text": "target remote 127.0.0.1:3333"},
        {"text": "set remote hardware-watchpoint-limit 2"},
        {"text": "monitor reset halt"},
        {"text": "flushregs"}
      ]
    }
  ]
}