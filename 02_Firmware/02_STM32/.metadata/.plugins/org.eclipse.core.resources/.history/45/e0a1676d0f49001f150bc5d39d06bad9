#include <i2cEngine.h>

i2cMaster::i2cMaster(I2C_HandleTypeDef *hi2c1) {
	// TODO Auto-generated constructor stub
	this->p_hi2c1 =hi2c1;
	HAL_I2C_MspDeInit(this->p_hi2c1);
	MX_I2C1_Init();
	vTaskDelay();
	printf("%s bus had been initialized.\r\n",this->TAG);
}

i2cMaster::~i2cMaster() {
	// TODO Auto-generated destructor stub
	HAL_I2C_MspDeInit(this->p_hi2c1);
}

