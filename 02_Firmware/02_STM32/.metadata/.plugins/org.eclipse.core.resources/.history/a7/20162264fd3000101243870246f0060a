#include "SileliS_code/ledsController.h"

ledsController::ledsController(hmiLeds* leds) {
	// TODO Auto-generated constructor stub
	this->pLeds = leds;

}

void ledsController::setLedColors(ledEnum whichLed, ws2812Color primary, ws2812Color secondary, uint8_t backlightLedsFrom, uint8_t backlightLedsTo){
	colorSet*pSetLed;
	switch (whichLed) {
	        case sourceLed:
	        	pSetLed=this->pLeds->sourceLed;
	            break;
	        case equaliserLed:
	        	pSetLed=this->pLeds->equaliserLed;
	        	break;
	        case errorLed:
	        	pSetLed=this->pLeds->errorLed;
	            break;
	        case backlightLeds:
	        	pSetLed=this->pLeds->backlightLeds;

	            break;
	    }
}

ledsController::~ledsController() {
	// TODO Auto-generated destructor stub
}

