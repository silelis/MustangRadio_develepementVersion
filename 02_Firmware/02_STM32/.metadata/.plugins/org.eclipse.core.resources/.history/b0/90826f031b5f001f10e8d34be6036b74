#include <stdint.h>
#include <stdbool.h>
#include "comunicationStructures.h"
#include <string.h>

struct execute_t{
	union keyboardUnion;
	void (*funcPtr)();
};


class menuItem{
public:
	//http://www.embeddeddev.pl/menu-na-lcd-wprowadzenie/
	menuItem(const char* tag, uint8_t execFunctionArraySize);
	~menuItem();

	execute_t* pExecFunction;

protected:

private:
	const char* TAG;
	void deleteExecFunctions(void);
};





#endif /* SRC_SILELIS_CODE_MENUITEM_H_ */
