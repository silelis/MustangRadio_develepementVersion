#ifndef LEDSCONTROLLER_H_
#define LEDSCONTROLLER_H_

#include "comunicationStructures.h"



class ledsController {
public:
	enum ledEnum;
	ledsController(hmiLeds* leds);

	virtual ~ledsController();

protected:
	void setLedBlinking(ledEnum whichLed, ws2812Color primary, ws2812Color secondary);
	void setLedColor(ledEnum whichLed, ws2812Color color);
private:
	//enum ledEnum;/*{
		sourceLed,
		equaliserLed,
		errorLed,
		backlightLeds
	};*/

	hmiLeds* pLeds;
	void setLedColors(ledEnum whichLed, ws2812Color primary, ws2812Color secondary);

	ws2812Color const colorRed	= {128,0,0};
	ws2812Color const colorGreen = {0,128,0};
	ws2812Color const colorBlue = {0,0,128};
	ws2812Color const colorBlack = {0,0,0};
	ws2812Color const colorWhite = {0,0,0};
};

enum ledsController::ledEnum {
    sourceLed,
    equaliserLed,
    errorLed,
    backlightLeds
};

#endif /* LEDSCONTROLLER_H_ */
