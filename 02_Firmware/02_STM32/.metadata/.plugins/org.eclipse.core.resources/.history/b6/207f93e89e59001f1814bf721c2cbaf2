#ifndef INC_SILELIS_CODE_LIST_H_
#define INC_SILELIS_CODE_LIST_H_

#include <stdio.h>
#include <stdlib.h>
#include <stdbool.h>
#include <stdint.h>


// Struktura pojedynczego elementu listy
struct Node {
    uint8_t nodeIndex;
    Node* next;
};

// Klasa List
class List {
private:
    Node* head;
    Node* current;
    uint8_t listSize;

public:
    // Konstruktor
    List();

    // Destruktor
    ~List();

    // Dodawanie elementów do listy
    void addAtBeginning(int data);
    void addAtEnd(int data);

    // Poruszanie się po liście
    void resetToFirst();
    void moveToNext();
    int getCurrentElement();
    bool isAtEnd();

    // Usuwanie elementu z listy
    void removeElement(int data);

    // Wydrukowanie elementów listy
    void printList();

private:
    // Prywatna funkcja pomocnicza do tworzenia nowego węzła
    Node* createNode(int data);

    // Prywatna funkcja do zwalniania pamięci
    void freeList();
};

#endif /* INC_SILELIS_CODE_LIST_H_ */
