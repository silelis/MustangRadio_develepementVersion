#ifndef LEDSCONTROLLER_H_
#define LEDSCONTROLLER_H_

#include "comunicationStructures.h"



class ledsController {
public:
	ledsController(hmiLeds* leds);
	virtual ~ledsController();

private:
	enum ledEnum{
		sourceLed,
		equaliserLed,
		errorLed,
		backlightLeds
	};

	hmiLeds* pLeds;
	uint8_t initialBacklightLedsFrom;
	uint8_t initialBacklightLedsTo;

	void setLedColors(ledEnum whichLed, ws2812Color primary, ws2812Color secondary, uint8_t backlightLedsFrom=initialBacklightLedsFrom, uint8_t backlightLedsTo=initialBacklightLedsTo);



};

#endif /* LEDSCONTROLLER_H_ */
